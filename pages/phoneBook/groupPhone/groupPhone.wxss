.phoneList {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 50rpx;
  margin-top: 30rpx;
  background: #fff;
  align-items: center;
}

.uploadInfor {
  position: fixed;
  width: 50%;
  left: 25%;
  bottom: 10%;
}

.detail {
  display: none;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.detail .toast {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.7;
  background: #333;
}

.detail .content {
  position: absolute;
  width: 90%;
  height: 50%;
  top: 25%;
  left: 5%;
  background: #fff;
  padding:80rpx 40rpx;
  border-radius: 2%;
  box-sizing: border-box;
  line-height:40rpx;
  display: flex;
  flex-direction:column;
  justify-content: space-between;
  box-shadow: #333 4rpx 4rpx 20rpx;
}

.detail .close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 85%;
  top: 5%;
}

.on {
  display: block;
}
