.background {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0.2;
  background: #fff;
}

.content {
  width: 90%;
  height: 50%;
  position: absolute;
  top: 40%;
  left: 5%;
  background: #fff;
  border-radius: 2%;
  box-shadow: #666 4rpx 4rpx 20rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 70rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
